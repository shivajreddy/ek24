<!--d:DataContext="{d:DesignInstance Type=viewmodels:ProjectBrowserViewModel}"-->
<!--d:DesignHeight="450" d:DesignWidth="800"-->
<UserControl x:Class="ek24.UI.Views.ProjectBrowser.ProjectBrowserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 

             xmlns:local="clr-namespace:ek24.UI.Views.ProjectBrowser">


    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ek24;component/UI/Resources/ProjectBrowserResources.xaml" />
                <!--<ResourceDictionary Source="/UI/Resources/ProjectBrowserResources.xaml"/>-->
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </UserControl.Resources>

    <!-- MAIN TAB 1: Project Browser: Sheets & 3D views -->
    <Grid Margin="10 5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="LightGray" BorderThickness="1" CornerRadius="4" Margin="0 5">
            <StackPanel Margin="10">
                <TextBlock Text="VIEWS" TextAlignment="Center" FontSize="18" FontWeight="SemiBold"/>

                <StackPanel Name="ListOfEK24Views" Margin="40 0">
                    <Button Style="{StaticResource GoToViewButtonStyle}" />
                </StackPanel>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" CornerRadius="4" Margin="0 10">
            <StackPanel Margin="10" >
                <TextBlock Text="SHEETS" TextAlignment="Center" FontSize="18" FontWeight="SemiBold"/>
                <StackPanel Name="ListOfEK24Sheets" Margin="40 0">
                </StackPanel>
            </StackPanel>
        </Border>

        <Border Grid.Row="2" BorderBrush="LightGray" BorderThickness="1" CornerRadius="4" Margin="0 10">
            <local:SelectCaseWorkView/>
        </Border>


    </Grid>

</UserControl>
