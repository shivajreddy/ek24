<UserControl x:Class="ek24.UI.Views.Properties.PropertiesPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 

             xmlns:views="clr-namespace:ek24.UI.Views"
             xmlns:views_properties="clr-namespace:ek24.UI.Views.Properties"
             >
    <Grid>

        <!-- MAIN TAB 2: Properties: update Families/Types/Instances/Params -->

        <Grid Margin="10 5">
            <Grid.RowDefinitions>
                <RowDefinition Height="450"/>
                <RowDefinition Height="270"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Margin="0 5" BorderBrush="DarkGray" BorderThickness="1" CornerRadius="4">
                <views_properties:CreateFamilyType/>
            </Border>
            <Border Grid.Row="1" Margin="0 5" BorderBrush="DarkGray" BorderThickness="1" CornerRadius="4">
                <views_properties:UpdateFamilyAndType/>
            </Border>
            <Border Grid.Row="2" Margin="0 5" BorderBrush="DarkGray" BorderThickness="1" CornerRadius="4">
                <views_properties:UpdateInstanceParams/>
            </Border>

        </Grid>

    </Grid>
</UserControl>
