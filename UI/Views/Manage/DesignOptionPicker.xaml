<Window x:Class="ek24.UI.Views.Manage.DesignOptionPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 

             Width="400" Height="220"
             ResizeMode="NoResize"

             mc:Ignorable="d">
    <Border Margin="10" BorderBrush="Gray" BorderThickness="1" CornerRadius="20" Background="White">
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center" >
            <StackPanel HorizontalAlignment="Stretch">
                <TextBlock Text="Choose the Design Option" TextAlignment="Center"/>
                <ComboBox Name="DesignOptionComboBox" HorizontalAlignment="Stretch" Margin="10" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="OkButton" Content="OK" Width="75" Margin="10" Click="OkButton_Click"/>
                <Button Name="CancelButton" Content="Cancel" Width="75" Margin="10" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>

